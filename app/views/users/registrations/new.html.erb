<%= render 'layouts/header' %>
<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="form-container">
      <div class="login-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'layouts/flash' %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :placeholder => 'Email address', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.text_field :first_name, autocomplete: "off", :placeholder => 'First Name', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.text_field :last_name, autocomplete: "off", :placeholder => 'Last Name', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <label> Industry Choice &nbsp;  &nbsp;</label>

          <row> <%= f.select :industry_1, industry_choices %> </row>
        </div>

        <div class="form-group">
          <label> Speciality Choice </label>
          <row> <%= f.select :speciality_1, speciality_choices %></row>
        </div>

        <div class="form-group">
          <label> Industry Choice &nbsp;  &nbsp;</label>
          <row> <%= f.select :industry_2, industry_choices %> </row>
        </div>


        <div class="form-group">
          <label> Speciality Choice </label>
          <row> <%= f.select :speciality_2, speciality_choices %></row>
        </div>

        <div>
          <%= f.submit "Sign up", :class => 'btn btn-primary btn-lg btn-block'%>
        </div>
        <% end %>

        <a class="login-link" href="#">Already a Member?</a>
      </div>
    </div>
  </div>
</div>


