<%= form_for :job, url: jobs_path do |f| %>
  <p>
    <%= f.label :company_name %><br>
    <%= f.text_field :name %>
  </p>

   <p>
    <%= f.label :job_Name %><br>
    <%= f.text_field :job_name %>
  </p>

   <p>
    <%= f.label :city %><br>
    <%= f.text_area :city %>
  </p>

   <p>
    <%= f.label :state %><br>
    <%= f.text_area :state %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit "Submit to Wekrut" %>
  </p>
<% end %>
<%= link_to 'Back', jobs_path %>