<div class="col-md-8 col-md-offset-2">
              <div class="form-container">
               
                  <div class="login-form">
                    <%= form_for :referral, url: referrals_path do |f| %>
  <div class="row">
  <div class="col-md-6">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
 

  <div class="col-md-6">
    <%= f.label :referral_name %><br>
    <%= f.text_area :referral_name %>
  </div>
</div>
 <div class="row">
  <div class="col-md-6">
    <%= f.label :relationship %><br />
    <%= f.select :relationship, relationship_choices %></div>
 

  <div class="col-md-6">
    <%= f.label :referral_email %><br>
    <%= f.text_area :referral_email %>
  </div>
</div>
   <div class="row">
  <div class="col-md-6">
    <%= f.label :additional_details %><br>
    <%= f.text_area :additional_details %></div>
 

  <div class="col-md-6">
    <%= f.label :linked_profile_url %><br>
    <%= f.text_area :linked_profile_url %>
  </div>
     </div>
     <p></p>
  
    <%= f.submit %>
  
<% end %>

</div>
</div>
</div>